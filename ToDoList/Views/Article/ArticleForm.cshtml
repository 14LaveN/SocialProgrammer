@using SocialProgrammer.Domain.Entity;
@using SocialProgrammer.Domain.Enum;
@model List<ArticleEntity>?

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SocialProgrammer</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/StandartStyle.css">
    <link rel="stylesheet" href="~/css/StandartStyle.css" />
    <link rel="stylesheet" href="~/css/Tools.css" />
</head>
<body>
    <label>@User.Identity.Name</label>
    @if (User.Identity.IsAuthenticated)
    {
        @foreach (var item in Model)
        {
            <h1>@item.Author</h1>
            <h1>@item.Description</h1>
            <h1>@item.Title</h1>
            <form asp-controller="Like" asp-action="AddLike" asp-route-id="@item.Id">
                <button>Like</button>
            </form>
            <form asp-controller="Article" asp-action="DeleteArticle" asp-route-id="@item.Id">
                <button class="btn">
                    <svg viewBox="0 0 15 17.5" height="17.5" width="15" xmlns="http://www.w3.org/2000/svg" class="icon">
                        <path transform="translate(-2.5 -1.25)" d="M15,18.75H5A1.251,1.251,0,0,1,3.75,17.5V5H2.5V3.75h15V5H16.25V17.5A1.251,1.251,0,0,1,15,18.75ZM5,5V17.5H15V5Zm7.5,10H11.25V7.5H12.5V15ZM8.75,15H7.5V7.5H8.75V15ZM12.5,2.5h-5V1.25h5V2.5Z" id="Fill"></path>
                    </svg>
                </button>
            </form>
            <h1>@item.LikesCount</h1>
            <form id="createCommentForm">
                <input value="@User.Identity.Name" name="Author" />
                <input name="Description" />
                <input class="inputAuthor" value="@item.Id" name="ArticleId" />
                <button id="createComment">Create</button>
            </form>
            <h1>@item.CommentsCount</h1>
            <a asp-controller="Comment" asp-action="CommentForm" asp-route-id="@item.Id">Comments</a>
        }
    }
    <h4 class="mb-3 text-muted">Создание задачи</h4>
        <form id="CreateArticleForm">
            <input class="inputAuthor" name="Author" value="@User.Identity.Name" />
            <div class="mb-3">
                <label class="form-label">Название задачи</label>
                <input class="input" name="name" type="text" />
            </div>цй
            <label class="form-label">Приоритет задачи</label>
            <select name="ContentType" class="form-select mb-3" asp-items="Html.GetEnumSelectList<ContentTypes>()"></select>
            <div class="mb-3">
                <label class="form-label">Описание</label>
                <textarea class="input" name="description" type="text" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Заголовок</label>
                <textarea class="input" name="Title" type="text" rows="3"></textarea>
            </div>
            <button id="CreateArticle" type="button" class="addButton">
                <span class="button__text">Add task</span>
                <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>
            </button>
        </form>
}
@section Scripts
    {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $('#CreateArticle').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateArticle", "Article")',
                data: $('#CreateArticleForm').serialize(),
                success: function (response) {
                    Swal.fire({
                        title: 'Информация',
                        text: response.description,
                        icon: 'success',
                        confirmButtonText: 'Окей'
                    })
                },
                error: function (response) {
                    Swal.fire({
                        title: 'Информация',
                        text: response.responseJSON.description,
                        icon: 'error',
                        confirmButtonText: 'Окей'
                    })
                }
            })
        });
    </script>
    <script>
        $('#createComment').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateComment", "Comment")',
                data: $('#createCommentForm').serialize(),
                success: function (response) {
                    Swal.fire({
                        title: 'Информация',
                        text: response.description,
                        icon: 'success',
                        confirmButtonText: 'Окей'
                    })
                },
                error: function (response) {
                    Swal.fire({
                        title: 'Информация',
                        text: response.responseJSON.description,
                        icon: 'error',
                        confirmButtonText: 'Окей'
                    })
                }
            })
        });
    </script>
}
</body>
</html>